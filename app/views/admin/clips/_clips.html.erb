<table>
  <thead>
    <tr>
      <td>Imágen</td>
      <td style="width: 10em;">Nombre</td>
      <td>Tamaños</td>
      <td>Fecha</td>
      <td></td>
    </tr>
  </thead>
  <% clips.each do |clip| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to 'Ver', clip.url %> </td>
      <td><%= clip.name %></td>
      <td>(<%= clip.width %> x <%= clip.height %> px)</td>
      <td class="actions">
        <%#= link_to 'Editar', edit_admin_group_clip_path(clip.group, clip) %>
        <%#= link_to 'Borrar', admin_group_clip_path(clip.group, clip), :confirm => '¡¡¡¿Estás seguro?!!! No se puede deshacer!!', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>